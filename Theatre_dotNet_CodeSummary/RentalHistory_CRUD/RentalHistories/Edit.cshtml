@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">

    <h2 class="RentalHistory-CreateEdit--h2 p-4" style="text-align:center;">Edit Rental History</h2>

    <div class="container rounded RentalHistory-CreateEdit--Box">
        @*overall Form Box*@
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal container p-4">
                <div class="form-group">

                    @*@Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="row">
                        <div class="col-6">
                            <h4>Rental</h4>
                            @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class=" col-6">
                            <h4>Damaged?</h4>
                            @*@Html.LabelFor(model => model.RentalDamaged, htmlAttributes: new { @class = "control-label col-md-2" })*@

                            @*changing next line from div to input = break the code.*@
                            <div @*onclick="validate()"*@ type="checkbox" class="RentalHistory-CreateEdit--CheckBox">
                                @*next line is where the box is created*@
                                @Html.EditorFor(model => model.RentalDamaged, new { htmlAttributes = new { @class = "RentalHistory-CreateEdit--CheckBox", @id = "damageCheckBox" } })
                                @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div> @*end of ROW*@
                    <hr />

                    <div class="row">
                        @* @Html.LabelFor(model => model.DamagesIncurred, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-12">

                            <h4 id="AutomaticTitle">Damages Incurred</h4>
                            @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <script>

                     

                    </script>


                    <div class="row col-6 mx-auto">


                        <div class="p-2">
                            @*Creates a button. Might have issue being inside of Form*@
                            @*syntax of button class added as 4th parameter. https://stackoverflow.com/questions/1444495/how-do-i-apply-a-css-class-to-html-actionlink-in-asp-net-mvc*@
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default RentalHistory-CreateEdit--my_button RentalHistory-CreateEdit--Black" })
                        </div>
                        <div class="p-2">
                            <input type="submit" value="Create" class="btn btn-default RentalHistory-CreateEdit--my_button" />
                        </div>



                    </div> @*End of ROW*@
                </div>  @*end horizontal form*@
            </div>
        }


    </div> @*end red Form Box*@
</div> @*end container*@


